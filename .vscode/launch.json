    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'x-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=x-rs",
                    "--package=x-rs"
                ],
                "filter": {
                    "name": "x-rs",
                    "kind": "bin"
                }
            },
            "args": [
                ".\\samples\\simple.x"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}